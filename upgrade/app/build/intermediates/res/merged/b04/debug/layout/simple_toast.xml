<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/simple_toast_bg">

    <!-- 多一层FrameLayout只是为了设置width和height -->
    <FrameLayout
        android:layout_width="@dimen/simple_toast_width"
        android:layout_height="@dimen/simple_toast_height">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:drawableLeft="@drawable/simple_toast_ic_success"
            tools:text="流量充值成功！" />

    </FrameLayout>

</FrameLayout>