<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.dudu.upgrade"
          xmlns:android="http://schemas.android.com/apk/res/android"
    android:sharedUserId="android.uid.system">
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 读取，写入外置存储卡权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 访问网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 获取mac地址-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 监听开机广播的权限-->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <!-- optional:若使用蓝牙功能，则添加 -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name="com.dudu.upgrade.UpgradeApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.dudu.upgrade.fota.FotaActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.dudu.upgrade.bt.BtServerActivity">
        </activity>

        <service android:name=".UpgradeService"/>

        <!-- required：声明fota下载升级的服务 -->
        <service android:name="com.fota.iport.service.DLService"></service>
        <!-- required：升级后上报数据 和 开机检测是否升级成功 <br/>
            注意：当前广播的优先级一定要高于其他开机广播的优先级
        -->
        <receiver android:name="com.fota.iport.receiver.UpgradeReceiver">
            <intent-filter android:priority="2147483647">
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <!-- optional：周期检测版本 开机时，升级版本提示 demo部分代码   start -->
        <service android:name="com.dudu.upgrade.fota.FotaIntentService"/>

        <receiver
            android:name="com.dudu.upgrade.UpgradeReceiver"
            android:excludeFromRecents="true"
            android:label="OtaReceiver">
            <intent-filter android:priority="2">
                <!--<action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>-->
                <action android:name="action.iport.recovery.upgrade"/>
                <action android:name="action.dudu.fota.check.start"/>
                <action android:name="action.dudu.app.check.finished"/>
                <action android:name="action.dudu.fota.download.cancel"/>
                <action android:name="action.dudu.fota.upgrade.start"/>
                <action android:name="action.dudu.fota.upgrade.debug.start"/>
                <action android:name="action.dudu.app.upgrade.start"/>
                <action android:name="action.dudu.app.install.finished"/>
            </intent-filter>
        </receiver>
        <!-- optional：周期检测版本 开机时，升级版本提示 demo部分代码   end -->
        <service
            android:name="com.dudu.upgrade.fota.update.UpdateService"
            android:exported="false">
        </service>

        <activity
            android:name="com.dudu.upgrade.fota.update.NoticeSelfActivity"
            android:launchMode="singleTask"
            android:theme="@style/translucent">
        </activity>
    </application>

</manifest>